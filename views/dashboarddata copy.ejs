        const dataTable = document.getElementById('data-table');

        const socket = io();
        socket.on('serialData', (data) => {
        const serialDataElement = document.getElementById('serialData');
         serialDataElement.innerHTML = data;

          const timestamp = new Date().toLocaleTimeString();
            chart.data.labels.push(timestamp);
            chart.data.datasets[0].data.push(data);

            // ยกเลิกข้อมูลเก่าเมื่อมีมากกว่า 10 จุด
            if (chart.data.labels.length > 20) {
                chart.data.labels.shift();
                chart.data.datasets[0].data.shift();
            }

            // ปรับปรุงแผนภูมิ
            chart.update();

            if (dataTable.rows.length > 20) {
                dataTable.deleteRow(-1);
            }
            const row = dataTable.insertRow(0);
            const cell1 = row.insertCell(0);
            const cell2 = row.insertCell(1);
            cell1.innerHTML = new Date().toLocaleTimeString();
            cell2.innerHTML = data;

            // ย้ายตารางเข้ากับหน้าสุดของตารางเมื่อมีข้อมูลใหม่
